<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:buttonStyle">@style/HunterButton</item>
        <item name="alertDialogTheme">@style/MyDialogTheme</item>
    </style>

    <style name="HunterButton">
        <item name="android:textSize">19sp</item>
        <item name="android:layout_margin">0dip</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_bg_selector</item>
    </style>

    <style name="MyDialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:background">@color/white</item>
        <item name="windowMinWidthMajor">90%</item>
        <item name="windowMinWidthMinor">85%</item>
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
    </style>

</resources>
